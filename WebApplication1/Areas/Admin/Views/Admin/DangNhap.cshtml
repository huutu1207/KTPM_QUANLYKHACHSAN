@{
    ViewBag.Title = "DangNhap";
    Layout = null;
}
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<style>
    /* Tổng quan */
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0;
    }
    /* Login Page */
    .login-page {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(135deg, #1a3c6e, #0f2649);
        position: relative;
        overflow: hidden;
    }

        /* Background animation */
        .login-page::before {
            content: '';
            position: absolute;
            top: -10%;
            left: -10%;
            width: 120%;
            height: 120%;
            background: url('https://source.unsplash.com/1600x900/?luxury-hotel') no-repeat center center/cover;
            opacity: 0.15;
            animation: subtle-move 20s infinite alternate;
            z-index: 0;
        }



    .login-container {
        display: flex;
        flex-direction: row;
        background-color: rgba(255, 255, 255, 0.95);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
        border-radius: 16px;
        overflow: hidden;
        max-width: 900px;
        width: 75%;
        z-index: 1;
        position: relative;
    }

    /* Form Container */
    .form-container {
        flex: 1;
        padding: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
    }

    /* Hotel logo */
    .hotel-logo {
        position: absolute;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 26px;
        color: #1a3c6e;
        font-weight: 700;
        text-align: center;
    }

        .hotel-logo i {
            display: block;
            font-size: 32px;
            margin-bottom: 5px;
        }

    .form-container h2 {
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 15px;
        color: #1a3c6e;
        text-align: center;
    }

    .form-container p {
        margin-bottom: 35px;
        color: #6c757d;
        font-size: 16px;
        text-align: center;
    }

    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

        .form-group label {
            display: block;
            margin-bottom: 10px;
            color: #1a3c6e;
            font-weight: 500;
            font-size: 15px;
        }

        .form-group input {
            width: 100%;
            padding: 15px 15px 15px 45px;
            border: 1px solid #d8e0e9;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s ease;
            background-color: #f8f9fa;
        }

            .form-group input:focus {
                border-color: #1a3c6e;
                background-color: #fff;
                box-shadow: 0 0 0 4px rgba(26, 60, 110, 0.1);
                outline: none;
            }

        /* Icons for inputs */
        .form-group::before {
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            position: absolute;
            left: 15px;
            top: 43px;
            color: #6c757d;
            font-size: 18px;
        }

        .form-group:nth-child(1)::before {
            content: "\f007"; /* User icon */
        }

        .form-group:nth-child(2)::before {
            content: "\f023"; /* Lock icon */
        }

    /* Buttons */
    .btn-login {
        width: 100%;
        padding: 15px;
        border: none;
        border-radius: 10px;
        font-size: 18px;
        font-weight: 600;
        color: #ffffff;
        background: linear-gradient(to right, #1a3c6e, #2a5998);
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(26, 60, 110, 0.2);
    }

        .btn-login:hover {
            background: linear-gradient(to right, #15325d, #1f4277);
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(26, 60, 110, 0.3);
        }

        .btn-login:active {
            transform: translateY(-1px);
        }

    /* Error message */
    h4 {
        margin: 0 0 20px;
        padding: 10px;
        border-radius: 6px;
        background-color: rgba(220, 53, 69, 0.1);
        border-left: 4px solid #dc3545;
    }

    /* Image Container */
    .image-container {
        flex: 1.2;
        background: url('https://source.unsplash.com/random/900x900/?luxury-hotel-reception') no-repeat center center/cover;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .image-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom right, rgba(26, 60, 110, 0.8), rgba(15, 38, 73, 0.6));
        }

        .image-container .hotel-features {
            position: relative;
            color: white;
            text-align: center;
            padding: 0 30px;
        }

        .image-container h3 {
            font-size: 28px;
            margin-bottom: 20px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

    .feature-item {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        text-align: left;
    }

        .feature-item i {
            font-size: 24px;
            margin-right: 15px;
            color: #ffc107;
        }

    /* Responsive design */


    .form-container {
        padding: 30px;
    }

    .image-container {
        min-height: 200px;
        order: -1;
    }

    .hotel-logo {
        position: static;
        transform: none;
        margin-bottom: 25px;
    }

    }

    /* Additional animation */

    .form-container > * {
        animation: fadeIn 0.6s ease-out forwards;
    }

    .form-container h2 {
        animation-delay: 0.1s;
    }

    .form-container p {
        animation-delay: 0.2s;
    }

    .form-group:nth-child(1) {
        animation-delay: 0.3s;
    }

    .form-group:nth-child(2) {
        animation-delay: 0.4s;
    }

    h4 {
        animation-delay: 0.5s;
    }

    .btn-login {
        animation-delay: 0.6s;
    }
</style>
<div class="login-page">
    <div class="login-container">
        <!-- Form đăng nhập -->
        <div class="form-container">
            <div class="hotel-logo">
                <i class="fas fa-hotel"></i>
                <span>Luxury Hotel</span>
            </div>
            <h2>Welcome Back!</h2>
            <p>Please enter your details to log in.</p>
            <form method="post" action="/Admin/Admin/DangNhap">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" placeholder="Enter your username" required />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password" required />
                </div>
                <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
                <button type="submit" class="btn-login">Log In</button>
            </form>
        </div>
        <!-- Image container -->
        <div class="image-container">
            <div class="hotel-features">
                <h3>Hotel Management System</h3>
                <div class="feature-item">
                    <i class="fas fa-calendar-check"></i>
                    <span>Streamlined Reservation Management</span>
                </div>
                <div class="feature-item">
                    <i class="fas fa-concierge-bell"></i>
                    <span>Guest Service Excellence</span>
                </div>
                <div class="feature-item">
                    <i class="fas fa-chart-line"></i>
                    <span>Real-time Performance Analytics</span>
                </div>
            </div>
        </div>
    </div>
</div>