@{
    var nhanVien = ViewBag.ThongTinNhanVien as WebApplication1.Models.NHANVIEN;
    var vaiTro = ViewBag.VaiTro as string;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Thêm Font Awesome và Google Font -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<div class="admin-dashboard">
    <div class="dashboard-header">
        <i class="fas fa-shield-alt header-icon"></i>
        <h2>Chào Mừng Đến Trang Quản Trị</h2>
        <p class="dashboard-subtitle">Xin chào, quản trị viên! Đây là cổng quản lý hệ thống của bạn.</p>
    </div>

    @if (nhanVien != null)
    {
        <div class="dashboard-content">
            <div class="dashboard-stats">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-bed"></i>
                    </div>
                    <div class="stat-info">
                        <h3>10</h3>
                        <p>Tổng số phòng</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-info">
                        <h3>120</h3>
                        <p>Khách hàng</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="stat-info">
                        <h3>67</h3>
                        <p>Đặt phòng tháng này</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                    <div class="stat-info">
                        <h3>45.8M</h3>
                        <p>Doanh thu (VNĐ)</p>
                    </div>
                </div>
            </div>

            <div class="profile-section">
                <div class="profile-header">
                    <div class="profile-avatar">
                        <div class="avatar-circle">
                            @if (nhanVien.GioiTinh == "Nam")
                            {
                                <i class="fas fa-user"></i>
                            }
                            else
                            {
                                <i class="fas fa-user-alt"></i>
                            }
                        </div>
                    </div>
                    <div class="profile-title">
                        <h3>@nhanVien.HoTen</h3>
                        <p>@nhanVien.ChucVu</p>
                    </div>
                </div>

                <div class="profile-details">
                    <table class="info-table">
                        <tr>
                            <th><i class="fas fa-id-badge"></i> Họ và tên</th>
                            <td>@nhanVien.HoTen</td>
                        </tr>
                        <tr>
                            <th><i class="fas fa-briefcase"></i> Chức vụ</th>
                            <td>@nhanVien.ChucVu</td>
                        </tr>
                        <tr>
                            <th><i class="fas fa-map-marker-alt"></i> Địa chỉ</th>
                            <td>@nhanVien.DiaChi</td>
                        </tr>
                        <tr>
                            <th><i class="fas fa-envelope"></i> Email</th>
                            <td><a href="mailto:@nhanVien.Email">@nhanVien.Email</a></td>
                        </tr>
                        <tr>
                            <th><i class="fas fa-phone"></i> Số điện thoại</th>
                            <td><a href="tel:@nhanVien.DienThoai">@nhanVien.DienThoai</a></td>
                        </tr>
                        <tr>
                            <th><i class="fas fa-venus-mars"></i> Giới tính</th>
                            <td>@nhanVien.GioiTinh</td>
                        </tr>
                    </table>
                </div>

                <div class="action-buttons">
                    <button type="button" class="btn btn-edit" onclick="location.href='@Url.Action("ChinhSua", "Admin", new { id = ViewBag.ThongTinNhanVien.MaNV })'">
                        <i class="fas fa-user-edit"></i> Chỉnh sửa hồ sơ
                    </button>
                    @*<button class="btn btn-password">
                        <i class="fas fa-key"></i> Đổi mật khẩu
                    </button>*@
                </div>
            </div>

            <div class="quick-links">
                <h3><i class="fas fa-link"></i> Truy cập nhanh</h3>
                <div class="links-grid">
                    <a href="@Url.Action("DanhSachPhong", "Phong")" class="quick-link-card">
                        <i class="fas fa-hotel"></i>
                        <span>Quản lý phòng</span>
                    </a>
                    <a href="@Url.Action("DanhSachNhanVien", "QL_NhanVien")" class="quick-link-card">
                        <i class="fas fa-users-cog"></i>
                        <span>Quản lý nhân viên</span>
                    </a>
                    <a href="@Url.Action("DanhSachKhachHang", "QL_KhachHang")" class="quick-link-card">
                        <i class="fas fa-user-friends"></i>
                        <span>Khách hàng</span>
                    </a>
                    <a href="@Url.Action("LichSuTraPhong", "Phong")" class="quick-link-card">
                        <i class="fas fa-chart-line"></i>
                        <span>Báo cáo</span>
                    </a>
                    
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="error-container">
            <i class="fas fa-exclamation-triangle"></i>
            <h3>Không tìm thấy thông tin người dùng!</h3>
            <p>Vui lòng đăng nhập lại hoặc liên hệ với người quản trị hệ thống.</p>
            <button class="btn btn-primary" onclick="window.location.href='/Admin/Home/Login'">
                <i class="fas fa-sign-in-alt"></i> Đăng nhập
            </button>
        </div>
    }
</div>

<style type="text/css">
    /* Reset và Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f5f7fb;
        color: #333;
        line-height: 1.6;
    }

    /* Dashboard Container */
    .admin-dashboard {
        max-width: 1200px;
        margin: 30px auto;
        padding: 0 20px;
    }

    /* Dashboard Header */
    .dashboard-header {
        text-align: center;
        margin-bottom: 40px;
        padding-bottom: 20px;
        border-bottom: 1px dashed #e0e6ed;
        position: relative;
    }

    .header-icon {
        font-size: 3rem;
        color: #1a73e8;
        margin-bottom: 15px;
        display: block;
    }

    .dashboard-header h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #172b4d;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
        color: #6b778c;
        max-width: 600px;
        margin: 0 auto;
    }

    /* Stats Cards */
    .dashboard-stats {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: linear-gradient(135deg, #ffffff 0%, #f7f9fc 100%);
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 25px;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        border: 1px solid #e0e6ed;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            border-color: #d0d7e2;
        }

    .stat-icon {
        background: linear-gradient(135deg, #1a73e8 0%, #0d47a1 100%);
        color: white;
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-right: 20px;
        box-shadow: 0 5px 15px rgba(26, 115, 232, 0.2);
    }

    .stat-info h3 {
        font-size: 1.8rem;
        font-weight: 700;
        color: #172b4d;
        margin-bottom: 5px;
    }

    .stat-info p {
        font-size: 0.9rem;
        color: #6b778c;
        margin: 0;
    }

    /* Profile Section */
    .profile-section {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        margin-bottom: 40px;
        border: 1px solid #e0e6ed;
    }

    .profile-header {
        background: linear-gradient(135deg, #1a73e8 0%, #0d47a1 100%);
        color: white;
        padding: 30px;
        display: flex;
        align-items: center;
    }

    .avatar-circle {
        width: 80px;
        height: 80px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #1a73e8;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        margin-right: 20px;
    }

    .profile-title h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .profile-title p {
        font-size: 1rem;
        opacity: 0.9;
        margin: 0;
    }

    .profile-details {
        padding: 30px;
    }

    .info-table {
        width: 100%;
        border-collapse: collapse;
    }

        .info-table tr {
            border-bottom: 1px solid #f0f3f8;
            transition: background-color 0.3s;
        }

            .info-table tr:hover {
                background-color: #f8faff;
            }

            .info-table tr:last-child {
                border-bottom: none;
            }

        .info-table th, .info-table td {
            padding: 15px 10px;
            text-align: left;
            vertical-align: middle;
        }

        .info-table th {
            font-weight: 600;
            color: #6b778c;
            width: 35%;
        }

            .info-table th i {
                margin-right: 10px;
                color: #1a73e8;
                font-size: 1.1rem;
            }

        .info-table td {
            color: #172b4d;
            font-weight: 500;
        }

        .info-table a {
            color: #1a73e8;
            text-decoration: none;
            transition: color 0.3s;
        }

            .info-table a:hover {
                color: #0d47a1;
                text-decoration: underline;
            }

    .action-buttons {
        display: flex;
        justify-content: flex-end;
        gap: 15px;
        padding: 20px 30px;
        background-color: #f8faff;
        border-top: 1px solid #f0f3f8;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s;
        border: none;
    }

    .btn-edit {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: white;
        box-shadow: 0 4px 10px rgba(52, 152, 219, 0.2);
    }

        .btn-edit:hover {
            background: linear-gradient(135deg, #2980b9 0%, #1a5276 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(52, 152, 219, 0.3);
        }

    .btn-password {
        background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
        color: white;
        box-shadow: 0 4px 10px rgba(52, 73, 94, 0.2);
    }

        .btn-password:hover {
            background: linear-gradient(135deg, #2c3e50 0%, #1a2530 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(52, 73, 94, 0.3);
        }

    /* Quick Links */
    .quick-links {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 30px;
        border: 1px solid #e0e6ed;
    }

        .quick-links h3 {
            font-size: 1.3rem;
            color: #172b4d;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .quick-links h3 i {
                color: #1a73e8;
            }

    .links-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 20px;
    }

    .quick-link-card {
        background: linear-gradient(135deg, #f8faff 0%, #f0f3f8 100%);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        text-decoration: none;
        color: #172b4d;
        transition: all 0.3s;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 120px;
        border: 1px solid #e0e6ed;
    }

        .quick-link-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.08);
            background: linear-gradient(135deg, #ffffff 0%, #f8faff 100%);
            border-color: #d0d7e2;
        }

        .quick-link-card i {
            font-size: 2rem;
            color: #1a73e8;
            margin-bottom: 10px;
            transition: transform 0.3s;
        }

        .quick-link-card:hover i {
            transform: scale(1.1);
        }

        .quick-link-card span {
            font-weight: 500;
            font-size: 0.9rem;
        }

    /* Error Container */
    .error-container {
        text-align: center;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 50px 30px;
        border: 1px solid #e0e6ed;
    }

        .error-container i {
            font-size: 4rem;
            color: #e74c3c;
            margin-bottom: 20px;
        }

        .error-container h3 {
            font-size: 1.5rem;
            color: #172b4d;
            margin-bottom: 15px;
        }

        .error-container p {
            font-size: 1rem;
            color: #6b778c;
            margin-bottom: 25px;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

    .btn-primary {
        background: linear-gradient(135deg, #1a73e8 0%, #0d47a1 100%);
        color: white;
        box-shadow: 0 4px 10px rgba(26, 115, 232, 0.2);
        padding: 12px 25px;
        margin: 0 auto;
        display: inline-flex;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0d47a1 0%, #072c70 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(26, 115, 232, 0.3);
        }

    /* Responsive Adjustments */
    @@media screen and (max-width: 768px) {
        .dashboard-stats {
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        }

        .profile-header {
            flex-direction: column;
            text-align: center;
            padding: 20px;
        }

        .avatar-circle {
            margin: 0 auto 15px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .links-grid {
            grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        }

        .dashboard-header h2 {
            font-size: 2rem;
        }
    }

    @@media screen and (max-width: 480px) {
        .dashboard-stats {
            grid-template-columns: 1fr;
        }

        .links-grid {
            grid-template-columns: 1fr 1fr;
        }

        .info-table th, .info-table td {
            display: block;
            width: 100%;
        }

        .info-table th {
            padding-bottom: 5px;
        }

        .info-table td {
            padding-top: 5px;
            padding-bottom: 15px;
        }
    }
</style>