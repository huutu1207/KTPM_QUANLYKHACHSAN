@model IEnumerable<WebApplication1.Models.LichSuTraPhong>

@{
    ViewBag.Title = "LichSuTraPhong";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Lịch sử trả phòng</h2>

<a href="@Url.Action("XuatLichSuTraPhong", "Phong", new { area = "Admin" })" class="btn btn-success" style="margin-bottom:15px;">
    <i class="fa fa-file-excel-o"></i> Xuất Excel
</a>


<table class="table">
    <tr>


        <th>
            <p>Phòng</p>
        </th>
        <th>
            <p>Mã khách hàng</p>
        </th>
        <th>
            <p>Họ tên</p>
        </th>
        <th>
            <p>SDT</p>
        </th>
        <th>
            <p>CCCD</p>
        </th>
        <th>
            <p>Email</p>
        </th>
        <th>
            <p>Giá</p>
        </th>
        <th>
            <p>Ngày nhận</p>
        </th>
        <th>
            <p>Ngày trả</p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>


            <td>
                @Html.DisplayFor(modelItem => item.SoPH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CCCD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayNhan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTra)
            </td>

        </tr>
    }

</table>

<style>
    /* Page Container */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
