@{
    ViewBag.Title = "ThemDichVu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model WebApplication1.Models.DICHVU
<head>
    <link href="~/Content/QLDichVu.css" rel="stylesheet" type="text/css" />
</head>

<div class="card">
    <div class="card-header">
        <h3><i class="fa fa-plus-circle"></i> Thêm Dịch Vụ Mới</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("ThemDichVu", "QL_DichVu", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation" }))
        {
            @Html.AntiForgeryToken() <!-- Bảo mật chống CSRF -->

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Tên Dịch Vụ <span class="text-danger">*</span></label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.TenDV, new { @class = "form-control", placeholder = "Nhập tên dịch vụ", required = "required" })
                    @Html.ValidationMessageFor(m => m.TenDV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Mô Tả</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Mota, new { @class = "form-control", placeholder = "Nhập mô tả chi tiết về dịch vụ", rows = "5" })
                    @Html.ValidationMessageFor(m => m.Mota, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Giá <span class="text-danger">*</span></label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">₫</div>
                        </div>
                        @Html.TextBoxFor(m => m.Gia, new { @class = "form-control", type = "number", placeholder = "Nhập giá dịch vụ", required = "required", min = "0" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Gia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Ảnh Dịch Vụ</label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="AnhDichVu" name="imageFile" accept="image/*">
                        <label class="custom-file-label" for="AnhDichVu">Chọn tệp ảnh...</label>
                    </div>
                    <div class="mt-3" id="imagePreview"></div>
                </div>
            </div>

            <div class="form-group form-actions">
                <div class="offset-sm-2 col-sm-10">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Lưu Dịch Vụ</button>
                    <a href="@Url.Action("DSDichVu", "QL_DichVu")" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Quay Lại</a>
                </div>
            </div>
        }
    </div>
</div>

<script>
    // Hiển thị tên file đã chọn và xem trước ảnh
    document.getElementById('AnhDichVu').addEventListener('change', function(e) {
        var fileName = e.target.files[0].name;
        var nextSibling = e.target.nextElementSibling;
        nextSibling.innerText = fileName;

        // Xem trước ảnh
        var preview = document.getElementById('imagePreview');
        preview.innerHTML = '';

        var img = document.createElement('img');
        img.src = URL.createObjectURL(e.target.files[0]);
        img.classList.add('img-preview');
        preview.appendChild(img);
    });
</script>
<style>
    /* Form styling */
    .card {
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        border: none;
        background-color: #fff;
    }

    .card-header {
        background: linear-gradient(135deg, #28a745, #218838);
        color: white;
        border-radius: 10px 10px 0 0 !important;
        padding: 15px 20px;
        border-bottom: none;
    }

        .card-header h3 {
            margin: 0;
            font-size: 20px;
            font-weight: 600;
        }

    .card-body {
        padding: 30px;
    }

    /* Form controls */
    .form-group {
        margin-bottom: 25px;
    }

    .form-control {
        height: 45px;
        border-radius: 5px;
        border: 1px solid #ddd;
        box-shadow: none;
        padding: 10px 15px;
        font-size: 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }

    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }

    .col-form-label {
        font-weight: 600;
        color: #444;
    }

    /* Custom file input */
    .custom-file {
        position: relative;
        display: inline-block;
        width: 100%;
        height: 45px;
    }

    .custom-file-input {
        position: relative;
        z-index: 2;
        width: 100%;
        height: 45px;
        margin: 0;
        opacity: 0;
        cursor: pointer;
    }

    .custom-file-label {
        position: absolute;
        top: 0;
        right: 0;
        left: 0;
        z-index: 1;
        height: 45px;
        padding: 10px 15px;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: all 0.3s ease;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

        .custom-file-label::after {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            z-index: 3;
            display: block;
            height: 45px;
            padding: 10px 15px;
            line-height: 1.5;
            color: #fff;
            content: "Duyệt";
            background-color: #28a745;
            border-left: 1px solid #28a745;
            border-radius: 0 5px 5px 0;
        }

    /* Image preview */
    .img-preview {
        max-width: 200px;
        max-height: 200px;
        border: 2px solid #eaeaea;
        border-radius: 5px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        margin-top: 10px;
    }

    /* Buttons */
    .btn {
        padding: 10px 20px;
        font-size: 15px;
        border-radius: 5px;
        font-weight: 600;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        transition: all 0.3s ease;
        margin-right: 10px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
        box-shadow: 0 4px 10px rgba(40, 167, 69, 0.3);
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(40, 167, 69, 0.5);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
        box-shadow: 0 4px 10px rgba(108, 117, 125, 0.3);
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(108, 117, 125, 0.5);
        }

    /* Icons */
    .fa {
        margin-right: 8px;
    }

    /* Form actions */
    .form-actions {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
    }

    /* Validation */
    .text-danger {
        font-size: 14px;
        margin-top: 5px;
        display: block;
    }

    /* Required field marker */
    .text-danger {
        color: #dc3545;
    }

    /* Input group */
    .input-group-text {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        color: #495057;
        font-weight: 600;
    }

    /* Responsive adjustments (without media queries) */
    .row {
        display: flex;
        flex-wrap: wrap;
        margin-right: -15px;
        margin-left: -15px;
    }

    .col-sm-2 {
        flex: 0 0 16.666667%;
        max-width: 16.666667%;
        padding-right: 15px;
        padding-left: 15px;
    }

    .col-sm-10 {
        flex: 0 0 83.333333%;
        max-width: 83.333333%;
        padding-right: 15px;
        padding-left: 15px;
    }

    .offset-sm-2 {
        margin-left: 16.666667%;
    }

    /* Placeholder styling */
    ::placeholder {
        color: #aaa;
        opacity: 1;
    }

    /* Form transition effects */
    .form-control, .btn, .custom-file-label, .input-group-text {
        transition: all 0.3s ease;
    }

        /* Focus states */
        .form-control:focus, .btn:focus, .custom-file-input:focus ~ .custom-file-label {
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }
</style>