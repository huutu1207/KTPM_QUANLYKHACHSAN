@model WebApplication1.Models.NHANVIEN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MaNV)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaNV)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DiaChi)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <!-- Các trường khác -->
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ChucVu)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ChucVu)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <button type="button" onclick="window.location.href='@Url.Action("DanhSachNhanVien", "NhanVien")'" class="btn btn-secondary">Back to List</button>
        </div>
    }
</div>

<style>
    /* Main Container Styling */
    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 20px;
    }

    /* Page Title Styling */
    h2 {
        font-size: 28px;
        font-weight: 700;
        color: #e53e3e;
        margin: 30px 0 20px;
        padding-bottom: 15px;
        position: relative;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
    }

        h2:after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100px;
            height: 3px;
            background: linear-gradient(to right, #e53e3e, #c53030);
            border-radius: 3px;
        }

        /* Warning Icon Before Title */
        h2:before {
            content: '⚠️';
            margin-right: 12px;
            font-size: 26px;
        }

    /* Confirmation Message */
    h3 {
        font-size: 22px;
        color: #4a5568;
        margin-bottom: 25px;
        font-weight: 600;
        background-color: #fff5f5;
        padding: 15px 20px;
        border-left: 4px solid #e53e3e;
        border-radius: 0 8px 8px 0;
        box-shadow: 0 3px 12px rgba(229, 62, 62, 0.1);
    }

    /* Content Container */
    .delete-container {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        padding: 30px;
        position: relative;
        overflow: hidden;
        border: 1px solid #f0f0f0;
        margin-bottom: 30px;
    }

    /* Divider Line */
    hr {
        border: 0;
        height: 2px;
        background: linear-gradient(to right, rgba(229, 62, 62, 0.1), rgba(229, 62, 62, 0.5), rgba(229, 62, 62, 0.1));
        margin: 20px 0 25px;
    }

    /* Definition List Styling */
    .dl-horizontal {
        display: grid;
        grid-template-columns: 200px 1fr;
        gap: 15px;
        margin-bottom: 30px;
    }

        /* Term (Left Column) */
        .dl-horizontal dt {
            text-align: right;
            font-weight: 600;
            color: #4a5568;
            font-size: 15px;
            padding: 12px 15px;
            background-color: #f8fafc;
            border-radius: 6px 0 0 6px;
            border-right: 3px solid #e2e8f0;
        }

        /* Data (Right Column) */
        .dl-horizontal dd {
            margin-left: 0;
            font-size: 16px;
            color: #2d3748;
            padding: 12px 15px;
            background-color: #f8fafc;
            border-radius: 0 6px 6px 0;
        }

            /* Row Alternating Colors */
            .dl-horizontal dt:nth-of-type(odd),
            .dl-horizontal dd:nth-of-type(odd) {
                background-color: #f8fafc;
            }

            .dl-horizontal dt:nth-of-type(even),
            .dl-horizontal dd:nth-of-type(even) {
                background-color: #f0f4f8;
            }

            /* Hover Effect for Rows */
            .dl-horizontal dt:hover,
            .dl-horizontal dd:hover {
                background-color: #edf2f7;
            }

            /* Critical Data Highlighting */
            .dl-horizontal dt:first-of-type,
            .dl-horizontal dd:first-of-type,
            .dl-horizontal dt:nth-of-type(2),
            .dl-horizontal dd:nth-of-type(2) {
                font-weight: 700;
                background-color: #fff5f5;
                border-color: #fed7d7;
            }

        .dl-horizontal dt:first-of-type {
            color: #e53e3e;
        }

        .dl-horizontal dd:first-of-type {
            color: #e53e3e;
            font-family: 'Consolas', monospace;
            letter-spacing: 1px;
        }

    /* Field-specific Styling */
    .field-fullname dt,
    .field-fullname dd {
        font-weight: 600;
    }

    .field-email dd {
        font-style: italic;
        color: #4299e1;
    }

    .field-position dd {
        color: #38a169;
        font-weight: 600;
    }

    /* Form Actions */
    .form-actions {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #edf2f7;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 15px;
    }

    /* Button Styling */
    .btn {
        padding: 12px 20px;
        font-size: 14px;
        font-weight: 600;
        border-radius: 6px;
        border: none;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    /* Delete Button */
    .btn-danger {
        background: linear-gradient(to right, #e53e3e, #c53030);
        color: white;
        padding: 12px 25px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(229, 62, 62, 0.3);
        outline: none;
        min-width: 150px;
    }

        .btn-danger:hover {
            background: linear-gradient(to right, #c53030, #9b2c2c);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(229, 62, 62, 0.4);
        }

        .btn-danger:active {
            transform: translateY(1px);
            box-shadow: 0 3px 10px rgba(229, 62, 62, 0.3);
        }

        .btn-danger:before {
            content: "🗑️";
            margin-right: 10px;
            font-size: 18px;
        }

    /* Secondary Button - Back to List */
    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 12px 25px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
        outline: none;
        min-width: 150px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(108, 117, 125, 0.4);
        }

        .btn-secondary:active {
            transform: translateY(1px);
            box-shadow: 0 3px 10px rgba(108, 117, 125, 0.3);
        }

        .btn-secondary:before {
            content: "←";
            margin-right: 10px;
            font-weight: bold;
            font-size: 18px;
        }

    /* Focus States */
    .btn:focus {
        outline: none;
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.5);
    }

    .btn-danger:focus {
        box-shadow: 0 0 0 3px rgba(229, 62, 62, 0.4);
    }

    .btn-secondary:focus {
        box-shadow: 0 0 0 3px rgba(108, 117, 125, 0.4);
    }

    /* Warning Box */
    .warning-box {
        background-color: #fff5f5;
        border-left: 4px solid #e53e3e;
        padding: 15px 20px;
        margin-bottom: 25px;
        border-radius: 0 8px 8px 0;
        box-shadow: 0 3px 12px rgba(229, 62, 62, 0.1);
    }

        .warning-box p {
            margin: 0;
            color: #c53030;
            font-weight: 500;
            display: flex;
            align-items: center;
        }

            .warning-box p:before {
                content: "⚠️";
                margin-right: 10px;
                font-size: 20px;
            }

    /* Decorative Corner Element */
    .delete-container:before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        border-width: 0 24px 24px 0;
        border-style: solid;
        border-color: #fed7d7 #ffffff;
    }

    /* Employee Image (If Needed) */
    .employee-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #e53e3e;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        background-color: #f8fafc;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
        color: #e53e3e;
    }

    /* Confirmation Dialog */
    .confirmation-dialog {
        background-color: #fff5f5;
        border: 1px solid #fed7d7;
        border-radius: 8px;
        padding: 15px;
        margin-top: 20px;
        margin-bottom: 20px;
    }

        .confirmation-dialog p {
            margin: 0;
            color: #c53030;
            font-weight: 500;
        }

    /* Employee Details Section */
    .employee-details {
        margin-bottom: 30px;
    }

    .employee-details-title {
        font-size: 18px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid #edf2f7;
    }

    /* Additional Warning */
    .delete-warning {
        font-size: 14px;
        color: #e53e3e;
        margin-top: 20px;
        padding: 12px;
        background-color: #fff5f5;
        border: 1px dashed #fed7d7;
        border-radius: 6px;
        text-align: center;
        font-weight: 500;
    }

    /* Empty Data Indicator */
    .dl-horizontal dd:empty:after {
        content: 'Không có dữ liệu';
        color: #a0aec0;
        font-style: italic;
    }

    /* Extra Styles for Delete Box */
    .delete-box {
        border-left: 4px solid #e53e3e;
        padding-left: 15px;
    }
</style>
